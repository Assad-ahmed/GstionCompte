{% extends 'base.html.twig' %}

{% block title %}Liste des acteurs!{% endblock %}

{% block body %}
     <a href="{{ path('edit_acteur') }}" class="btn btn-primary">Ajouter un acteur</a>
    <table class="table table-striped">
        <thead class="text-center" style="background-color: rgb(130, 106, 251);color:#fff;">
        <tr>

            <th>Nom</th>
            <th>Prenom</th>
            <th>Entreprise</th>
            <th>Detail</th>
            <th>Modification</th>
            <th>Suppression</th>
        </tr>
        </thead>
        <tbody class="text-sm-center">

        {% for acteur in acteurs %}
            <tr>
                <td>{{ acteur.nom }}</td>
                <td>{{ acteur.prenom }}</td>
                <td>{{ acteur.entreprise ? acteur.entreprise.nom  }} </td>
                <td><a href="#" class="btn btn-primary mt-2"><i class="fa-solid fa-circle-info"></i></a></td>
                <td><a href="{{ path('edit_acteur',{id: acteur.id}) }}" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></a></td>
                <td><a href="{{ path('delete_acteur', {id: acteur.id}) }}" class="btn btn-danger"
                       onclick="return confirm('Etes-vous sur de suprimer cet entreprise')">
                        <i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        {% endfor %}

        </tbody>

    </table>
{% endblock %}
